<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:clickable="true"
    android:background="@drawable/item_list_background"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:id="@+id/profile_img_rel"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/list_item_img_background"
        android:layout_marginStart="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/account_img_small"
            android:background="@null"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/fullname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/profile_img_rel"
        android:layout_marginStart="10dp"
        android:text="Fullname"
        android:textSize="16sp"
        android:textColor="@color/d_blue"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/username_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textColor="@color/d_blue"
        android:layout_toEndOf="@+id/profile_img_rel"
        android:layout_below="@+id/fullname_tv"
        android:text="Username"
        />

    <TextView
        android:id="@+id/work_group_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/d_blue"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/profile_img_rel"
        android:layout_below="@+id/username_tv"
        android:text="Work Group"/>

    <TextView
        android:id="@+id/rate_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="20dp"
        android:layout_centerVertical="true"/>


</RelativeLayout>
