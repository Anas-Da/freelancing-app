<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#FFFFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/r0h5yg2kjsuak"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF18104a"
            android:fillViewport="true"
            android:paddingTop="17dp"
            android:paddingBottom="-3dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/re7c8b5ltt7l"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_marginHorizontal="21dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/arrow_back" />
                <TextView
                    android:id="@+id/rlzqje35ev5"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_toEndOf="@+id/re7c8b5ltt7l"
                    android:layout_marginTop="-5dp"
                    android:layout_weight="1"
                    android:text="Samer Saka"
                    />
                <ImageView
                    android:id="@+id/r9vqib29tvru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/list" />
                <RelativeLayout
                    android:id="@+id/rdyndsji2gv7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/tl90tr90bffffffff"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:paddingVertical="30dp">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/bar"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="-30dp">


                        <ImageView
                            android:id="@+id/kmklasds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="7dp"
                            android:src="@drawable/smile"
                            ></ImageView>

                        <ImageView
                            android:id="@+id/r0h5ygsfhc2kjsuak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="5dp"
                            android:layout_marginTop="7dp"
                            android:src="@drawable/microphone"
                            ></ImageView>
                        <ImageView
                            android:id="@+id/aaduiahduihad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@+id/r0h5ygsfhc2kjsuak"
                            android:layout_marginEnd="35dp"
                            android:layout_marginTop="7dp"
                            android:src="@drawable/attachment"></ImageView>
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:ignore="TouchTargetSizeCheck"
                            android:layout_toEndOf="@+id/kmklasds"
                            android:layout_marginStart="5dp"
                            android:hint="Message">

                        </EditText>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>