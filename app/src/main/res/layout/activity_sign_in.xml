<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFFFF"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/r0h5yg2kjsuak"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FF18104a"
            android:fillViewport="true"
            android:paddingTop="17dp"
            android:paddingBottom="-3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rtif6nzhmkxf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="-3dp"
                    android:layout_marginEnd="2dp"
                    android:text="Sign in"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:translationX="-3dp"
                    android:translationY="-3dp" />

                <TextView
                    android:id="@+id/r9vqib29tvru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="285dp"
                    android:layout_marginTop="-3dp"
                    android:layout_marginEnd="2dp"
                    android:text="freelancer"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:translationY="-3dp" />

                <RelativeLayout
                    android:id="@+id/rdyndsji2gv7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/tl90tr90bffffffff"
                    android:paddingVertical="30dp">

                    <TextView
                        android:id="@+id/rmmhq5zz6np"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:text="Welcome"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/rgeio7dyf03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rmmhq5zz6np"
                        android:layout_marginStart="30dp"
                        android:text="Sign in your account to continue"
                        android:textColor="#96969c"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/rhnpbfnkllv9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rgeio7dyf03"
                        android:layout_marginStart="26dp"
                        android:layout_marginTop="10dp"
                        android:text="Username"
                        android:textColor="#2d2d3a"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:id="@+id/rx35kc18k1dg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rhnpbfnkllv9"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/sfff0f0f0sw1cr50"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="17dp"
                        android:paddingVertical="21dp">

                        <ImageView
                            android:id="@+id/rn6rktg051u"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/person"
                             />

                        <EditText
                            android:id="@+id/fullname_et"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/rn6rktg051u"
                            android:layout_marginStart="15dp"
                            android:ems="18"
                            android:hint="Username"
                            android:inputType="textWebEmailAddress"
                            android:minHeight="48dp"
                            android:textColor="#060000"
                            android:textSize="12sp"
                            android:background="@android:color/transparent"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/ry7kql5e3cnq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rx35kc18k1dg"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="28dp"
                        android:text="Password"
                        android:textColor="#2d2d3a"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:id="@+id/rzqzp5n0yuf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ry7kql5e3cnq"
                        android:layout_marginTop="5dp"
                        android:layout_marginHorizontal="22dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/sfff0f0f0sw1cr50"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="18dp"
                        android:paddingVertical="19dp">

                        <ImageView
                            android:id="@+id/rjh1fch95zx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/lock"
                            android:layout_centerVertical="true" />

                        <EditText
                            android:id="@+id/password_et"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@+id/rjh1fch95zx"
                            android:layout_marginStart="15dp"
                            android:ems="18"
                            android:hint="password"
                            android:inputType="textPassword"
                            android:minHeight="48dp"
                            android:textSize="12sp"
                            android:background="@android:color/transparent"/>

                        <ImageButton
                            android:id="@+id/eye_b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:clickable="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/eye"
                            android:background="@null"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                    </RelativeLayout>

                    <CheckBox
                        android:id="@+id/kajcnslankasl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rzqzp5n0yuf"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="20dp"
                        android:clickable="true" />

                    <TextView
                        android:id="@+id/r8kw3ipzykpi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rzqzp5n0yuf"
                        android:layout_toEndOf="@+id/kajcnslankasl"
                        android:layout_marginTop="15dp"
                        android:text="Remember me"
                        android:textColor="#2d2d3a"
                        android:textSize="14sp" />

                    <RadioGroup
                        android:id="@+id/radio_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/kajcnslankasl"
                        android:orientation="horizontal"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp">

                        <RadioButton
                            android:id="@+id/Customer_rb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/d_blue"
                            android:textSize="16sp"
                            android:text="Customer" />

                        <RadioButton
                            android:id="@+id/ServiceProvider_rb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="100dp"
                            android:text="Service Provider"
                            android:textColor="@color/d_blue"
                            android:textSize="16sp" />
                    </RadioGroup>

                    <Button
                        android:id="@+id/SignIn_b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/radio_group"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:text="Sign in"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:background="@drawable/cr76bffff4c14"
                        style="@style/orangeButton"
                        android:textAllCaps="false"/>

                    <TextView
                        android:id="@+id/rzstuld6jjj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/SignIn_b"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:clickable="true"
                        android:text="Don’t have an account?"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <Button
                        android:id="@+id/SignUp_b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rzstuld6jjj"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginTop="10dp"
                        android:text="Sign up"
                        android:textSize="16sp"
                        android:textColor="@color/l_blue"
                        android:background="@drawable/button_border"
                        style="@style/L_blueButton"
                        android:backgroundTint="@null"
                        android:textAllCaps="false"/>

                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
