<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:clickable="true"
    android:background="@drawable/item_list_background"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:id="@+id/profile_img_rel"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/list_item_img_background"
        android:layout_marginStart="10dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/account_img_small"
        android:background="@null"
        android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/seller_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/profile_img_rel"
        android:layout_marginStart="10dp"
        android:text="name"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginTop="2dp"
        />

    <TextView
        android:id="@+id/last_message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seller_name_tv"
        android:layout_marginStart="13dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/profile_img_rel"
        android:text="last_message"
        android:textSize="12dp"
        android:textStyle="bold"
        tools:ignore="TextSizeCheck" />
    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="2dp"
        android:text="12:34 PM"
        android:textSize="12sp"
        android:textColor="#757575"/>

        <TextView
            android:id="@+id/unread_count"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_below="@id/message_time"
            android:background="@drawable/messages_num_background"
            android:gravity="center"
            android:text="+99"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            />


</RelativeLayout>
